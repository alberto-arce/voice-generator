{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 120,
  "tabWidth": 2,
  "arrowParens": "always",
  "bracketSpacing": true,
  "singleAttributePerLine": false,
  "htmlWhitespaceSensitivity": "strict",
  "experimentalSortPackageJson": false,
  "ignorePatterns": [
    "build",
    "coverage",
    "**/*.html",
    "**/*.json",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/pnpm-lock.yaml",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/node_modules"
  ]
}
